<form class="row" action="/admin/project/{{ action }}" method="post">
    <div class="form-group col-12">
        <label for="title">Titre</label><br>
        <input class="form-control" type="text" id="title" name="project[title]" value="{{ project.title ?? ''}}" required>
    </div>
    <div class="form-group col-12">
        <label for="chapo">Chapo</label><br>
        <textarea class="form-control" id="chapo" name="project[chapo]" rows="10" cols="50" required>{{ project.chapo ?? ''}}</textarea>
    </div>
    <div class="form-group col-12">
        <label for="content">Contenu</label><br>
        <textarea class="form-control" id="content" name="project[content]" rows="10" cols="50" required>{{ project.content ?? ''}}</textarea>
    </div>
    <div class="form-group col-12">
        <label for="author">Auteur</label><br>
        <input class="form-control" type="text" id="author" name="project[author]" value="{{project.author ?? author ?? '' }}"  required>
    </div>
    <div class="form-group col-12">
        <label for="linkToProject">Lien vers le projet</label><br>
        <input class="form-control" type="text" id="linkToProject" name="project[linkToProject]" value="{{project.linkToProject ?? linkToProject ?? '' }}"  required>
    </div>
    <div class="form-group col-12">
        <label for="linkToPicture">Image</label><br>
        <input class="form-control" type="text" id="linkToPicture" name="project[linkToPicture]" value="{{ project.linkToPicture ?? '' }}"  required>
    </div>
    <input type="hidden" name="project[{{ tokenName }}]" value="{{ session.token }}">
    <div class="col-2">
        <input class="btn btn-primary" type="submit" value="Envoyer">
    </div>
</form>

