{% extends "back/template.html.twig" %}
{% block title %}Liste des projets - {{ commonTitle }}{% endblock %}
{% block content %}
    <main>
        <section class="container text-center" >
            <header class="mb-4">
                <h1>Liste des projets ({{ projects|length }})</h1>
                {% if flashMessage is not empty %}
                    <p class="{{ classValue }}">{{ flashMessage }}</p>
                {% endif %}
            </header>
            <div class="row projects">
                {% for project in projects %}
                        <a class="col-8 mb-4" href="/admin/project/see?id={{ project.id }}">{{ project.title }}</a>
                    <p class="col-4">
                        {{ project.dateUpdated|date("d/m/Y H:i:s") }}
                    </p>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
