{
    "require": {
        "twig/twig": "^3.0",
        "twbs/bootstrap": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "src/",
            "Core\\": "core/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.20"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf public/",
            "mkdir public",
            "mkdir public/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist public/bootstrap",
            "cp -R src/css public",
            "cp -R src/js public",
            "cp -R src/img public",
            "cp config/conf.php.dist config/conf.php"
        ]
    }
}
